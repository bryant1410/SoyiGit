<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wjj="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:canLoop="true" />

        <soyi.pro.com.soyi.Custom.CuteEditTextPro.CuteEditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            wjj:text_hint="@string/cute_text_hint"
            wjj:text_maxLength="10"
            wjj:text_minLength="6"
            android:background="@drawable/cute_edittext_bg"
            android:layout_below="@+id/convenientBanner"
            android:layout_centerHorizontal="true"></soyi.pro.com.soyi.Custom.CuteEditTextPro.CuteEditText>

        <RelativeLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/AliceBlue"
            android:visibility="visible">

            <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
                android:id="@+id/circleProgressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:mlpb_progress_stoke_width="5dp"
                app:mlpb_progress_text_visibility="visible" />

            <TextView
                android:id="@+id/jumpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/DoderBlue"
                android:textSize="20dp" />


        </RelativeLayout>

    </RelativeLayout>

    <!-- The navigation drawer -->
    <com.dodola.listview.extlib.ListViewExt
        android:id="@+id/navdrawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:backgroundTint="#00000000"
        android:choiceMode="singleChoice"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:drawSelectorOnTop="false"></com.dodola.listview.extlib.ListViewExt>

</android.support.v4.widget.DrawerLayout>